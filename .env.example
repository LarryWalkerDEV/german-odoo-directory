# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# OpenAI Configuration (for image generation)
# Note: The actual API key should be fetched from Supabase edge secrets
# This is just for local development/testing
OPENAI_API_KEY=your-openai-api-key

# Image Generation Settings
GENERATE_IMAGES=false  # Set to true to enable image generation
OPENAI_MODEL=dall-e-3
IMAGE_QUALITY=standard  # standard or hd
IMAGE_STYLE=vivid      # vivid or natural

# Environment
NODE_ENV=development